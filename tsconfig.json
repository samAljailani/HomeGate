{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "paths": {
      "@packages/*": ["./packages/*/src"]
    }
  },
  "references": [
  { "path": "./packages/types" },
  { "path": "./server" },
  { "path": "./client"}
  ],
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "./dist"]
}